<div class="panel panel-danger">
    <div class="panel-heading">
      <span class="label label-info"><%= @message.name %></span>
      <span class="label label-default"><%= @message.age %></span>
      </div>
      <div class="panel-body">
      <span class="label label-warning"><%= @message.category %></span>
      <%= @message.body %>
      <br>
      </div>
      </div>


    <% if @message.answers.any? %>
    <% @answers.each do |answer| %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <%= answer.name %>
        </div>
         <div class="panel-body">
      <%= answer.body %>
      </div>
      </div>
    <% end %>
    <% end %>


<%= form_for(@answer) do |f| %>
  <% if @answer.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @answer.errors.answers.each do |answers| %>
          <li>
            <%= answers %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  
  <%= f.hidden_field :message_id, :value => "message.id" %>
  
  <span class="col-sm-2" id="basic-addon1">Name</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_field :name , placeholder: "Pepper", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Age</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_field :age , placeholder: "29", class: "form-control" %>
</div>
</div>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Contents</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_area :body , placeholder: "Which carrier is the best in Japan?", class: "form-control" %>
</div>
</div>

  <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>

<% end %>