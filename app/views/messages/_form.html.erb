<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Name</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_field :name , placeholder: "Pepper", class: "form-control" %>
</div>
</div>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Age</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_field :age , placeholder: "29", class: "form-control" %>
</div>
</div>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Area</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_field :area , placeholder: "Tokyo", class: "form-control" %>
</div>
</div>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Category</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_area :category2 , placeholder: "Telecommunication", class: "form-control" %>
</div>
</div>

<div class="form-group">
  <span class="col-sm-2" id="basic-addon1">Contents</span>
  <div class="col-sm-10" aria-describedby="basic-addon1">
  <%= f.text_area :body , placeholder: "Which carrier is the best in Japan?", class: "form-control" %>
</div>
</div>

  <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>

<% end %>
